{
  "title": "Hash Generator",
  "directive": "hash-generator",
  "description": "Generates cryptographic hash values (digests) for text input using MD5 or common SHA algorithms.",
  "urlStateParams": [
    {
      "paramName": "text",
      "type": "string",
      "defaultValue": ""
    },
    {
      "paramName": "algorithm",
      "type": "enum",
      "defaultValue": "MD5"
    }
  ],
  "inputConfig": {
    "acceptsMimeTypes": ["text/*"],
    "stateFiles": "none"
  },
  "outputConfig": {
    "transferableContent": [
      {
        "dataType": "inline",
        "stateKey": "outputValue",
        "mimeType": "text/plain"
      }
    ]
  },
  "includeInSitemap": true,
  "status": "stable"
}
