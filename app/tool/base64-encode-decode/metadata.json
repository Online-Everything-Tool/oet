  "urlStateParams": [
    {
      "paramName": "text",
      "type": "string",
      "defaultValue": ""
    },
    {
      "paramName": "operation",
      "type": "enum",
      "defaultValue": "encode"
    }
  ],
  "inputConfig": {
    "acceptsMimeTypes": ["text/*"],
    "stateFiles": "none"
  },
  "outputConfig": {
    "transferableContent": [
      {
        "dataType": "inline",
        "stateKey": "outputValue",
        "mimeType": "text/plain"
      }
    ]
  },
  "includeInSitemap": true,
  "status": "stable"
}
