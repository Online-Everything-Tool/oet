{
  "title": "Case Converter",
  "description": "Converts text between various common casing styles like UPPERCASE, lowercase, Sentence case, Title Case, camelCase, PascalCase, snake_case, and kebab-case.",
  "urlStateParams": [
    {
      "paramName": "text",
      "type": "string",
      "defaultValue": ""
    },
    {
      "paramName": "case",
      "type": "enum",
      "defaultValue": "lowercase"
    }
  ],
  "inputConfig": {
    "acceptsMimeTypes": ["text/*"],
    "stateFiles": [{ "dataType": "none " }]
  },
  "outputConfig": {
    "transferableContent": {
      "dataType": "text",
      "textStateKey": "outputValue"
    }
  },
  "tags": ["text", "format", "developer"],
  "includeInSitemap": true,
  "status": "stable"
}
